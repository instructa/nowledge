# Path to the embedding model directory
NOWLEDGE_MODEL_PATH=models/bge-micro-v2

# Path to the SQLite database file
NOWLEDGE_DB_FILE=.nowledge.db

# Maximum number of search results to return
NOWLEDGE_MAX_RESULTS=5

# Number of sentences for summary generation
NOWLEDGE_SUMMARY_LENGTH=10

# Path to the sqlite-vec extension binary
# On Linux this is usually native/libsqlite_vec.so; macOS native/libsqlite_vec.dylib
SQLITE_VEC_PATH=native/libsqlite_vec.so

# Maximum concurrency for the web crawler
DEEPWIKI_CONCURRENCY=5

# Optional: GitHub token for fetching private repositories or increasing rate limits
# GITHUB_TOKEN= 