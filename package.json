{
  "name": "nowledge",
  "type": "module",
  "version": "0.0.7",
  "packageManager": "pnpm@9.14.4+sha512.c8180b3fbe4e4bca02c94234717896b5529740a6cbadf19fa78254270403ea2f27d4e1d46a08a0f56c89b63dc8ebfd3ee53326da720273794e6200fcf0d184ab",
  "description": "MCP server for fetch deepwiki.com and turn content into LLM readable markdown with vector search capabilities",
  "contributors": [
    {
      "name": "Kevin Kern",
      "email": "kevin@instructa.org"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/instructa/nowledge",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/instructa/nowledge"
  },
  "keywords": [
    "mcp",
    "mcp-starter",
    "model-context-protocol",
    "vector-search",
    "knowledge-base"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./bin/cli.mjs"
  },
  "bin": {
    "mcp-nowledge": "./bin/cli.mjs"
  },
  "files": [
    "bin",
    "dist",
    "models",
    "native"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "unbuild --fail-on-warn=false && npm run chmod-run",
    "chmod-run": "node -e \"fs.chmodSync('dist/index.mjs', '755'); if (require('fs').existsSync('dist/bin/cli.mjs')) require('fs').chmodSync('dist/bin/cli.mjs', '755');\"",
    "nowledge-bin": "node -e \"fs.mkdirSync('dist/bin', { recursive: true }); fs.writeFileSync('dist/bin/nowledge.mjs', '#!/usr/bin/env node\\nimport { runMain } from \\'../cli.mjs\\';\\nrunMain();', 'utf8'); fs.chmodSync('dist/bin/nowledge.mjs', '755');\"",
    "start": "nodemon --exec 'tsx src/index.ts'",
    "dev:prepare": "nr build",
    "inspect": "npx @modelcontextprotocol/inspector@latest",
    "dev": "npx concurrently 'unbuild --stub' 'npm run inspect'",
    "run-cli": "node dist/bin/nowledge.mjs",
    "dev-stdio": "npx concurrently 'npm run run-cli' 'npm run inspect node ./dist/bin/nowledge.mjs'",
    "dev-http": "npx concurrently 'npm run run-cli -- --http --port 4200' 'npm run inspect http://localhost:4200/mcp'",
    "dev-sse": "npx concurrently 'npm run run-cli -- --sse --port 4201' 'npm run inspect http://localhost:4201/sse'",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "release": "tsx scripts/release.ts",
    "download-model": "python scripts/download-model.py",
    "setup-sqlite-vec": "git clone https://github.com/asg017/sqlite-vec && cd sqlite-vec && make && cp build/libsqlite_vec.* ../native/"
  },
  "dependencies": {
    "@chatmcp/sdk": "^1.0.6",
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@vitest/eslint-plugin": "^1.1.43",
    "@xenova/transformers": "^2.15.1",
    "better-sqlite3": "^9.4.0",
    "chokidar": "^3.6.0",
    "citty": "^0.1.6",
    "eslint": "^9.25.1",
    "glob": "^10.3.10",
    "h3": "^1.15.1",
    "hast-util-from-html": "^2.0.3",
    "hast-util-sanitize": "^5.0.2",
    "linkedom": "^0.18.9",
    "markdown-it": "^14.0.0",
    "ofetch": "^1.4.1",
    "p-queue": "^8.1.0",
    "rehype-parse": "^9.0.1",
    "rehype-remark": "^10.0.1",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-stringify": "^11.0.0",
    "robots-parser": "^3.0.1",
    "tokenizers": "^0.13.3",
    "undici": "^7.8.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "wink-eng-lite-web-model": "^1.0.0",
    "wink-nlp": "^1.10.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@types/better-sqlite3": "^7.6.9",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^22.14.1",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.2",
    "nodemon": "^3.1.9",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vite": "^6.3.1",
    "vitest": "^3.1.1"
  }
}
